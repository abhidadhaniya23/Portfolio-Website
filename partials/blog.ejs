  <div class="flex flex-col justify-center bg-gray-100 blogs-bg pt-28 pb-14 md:pb-28">
    <h2 class="header-title !text-4xl sm:!text-5xl"><i class="mr-3 fa fa-book"></i>Latest Posts</h2>

    <div class="container flex flex-col items-center justify-center mx-auto sm:flex-row sm:items-baseline">
      <div class="flex flex-row flex-wrap items-center justify-center w-full m-4 overflow-hidden rounded-md">
        <%# articles.forEach(data=> { %> <% for(let i=0;i<2;i++){ %>
        <div class="relative w-11/12 h-auto pb-6 m-10 overflow-hidden duration-300 bg-white rounded-lg blog-img-hover sm:w-full md:w-3/4 lg:w-5/12">
          <a onclick="opacity()" href="/<%=articles[i].title.replace(/\s/g, '-')%>">
            <img class="duration-200 post-img hover:scale-105" src="<%=articles[i].cover_image%>" alt="" />
          </a>
          <a onclick="opacity()" href="/<%=articles[i].title.replace(/\s/g, '-')%>">
            <h2 class="z-20 px-4 pt-5 pb-3 text-xl text-gray-700 post-title sm:text-2xl"><%=articles[i].title%></h2>
          </a>
          <p class="w-full pl-5 text-sm text-gray-700 opacity-50 sm:text-xl">
            <i class="mr-2 fa fa-clock"></i>
            <%=articles[i].reading_time_minutes%> min to read
          </p>
        </div>
        <% } %> <%# }); %>
      </div>
    </div>
    <a class="resources-btn" href="https://abhisblogs.hashnode.dev/" target="_blank">Read More Blogs >></a>
  </div>
</section>
