    <div class="flex flex-col justify-center bg-gray-50 py-16">

        <h2 class="pb-9 interFont font-semibold text-5xl text-center text-primary">Latest Posts</h2>

        <div class="container mx-auto flex flex-col sm:flex-row justify-center items-center sm:items-baseline">

            <div class="flex flex-row flex-wrap justify-center items-center m-4 w-full overflow-hidden rounded-md">
                <% articles.forEach(data=> { %>
                    <div class="overflow-hidden h-auto relative m-10 w-11/12 sm:w-full md:w-3/4 lg:w-5/12 rounded-lg">
                        <a href="/<%=data.title.replace(/\s/g, '-')%>">
                            <img class="post-img" src="<%=data.cover_image%>" alt="">
                        </a>
                        <a href="/<%=data.title.replace(/\s/g, '-')%>">
                            <h2 class="p-4 text-gray-700 sm:text-2xl text-xl z-20">
                                <%=data.title%>
                            </h2>
                        </a>
                        <p class="text-gray-700 text-xl opacity-50 w-full pl-5"><i class="fa fa-clock mr-2"></i>
                            <%=data.reading_time_minutes%> min to read
                        </p>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>
</section>